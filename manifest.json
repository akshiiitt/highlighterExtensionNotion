{
  "manifest_version": 3,
  "name": "Text Highlighter & Notion Saver",
  "version": "1.1.0",
  "description": "Minimal: highlight selected text and save to a Notion page via context menu.",

  "permissions": [
    "storage",
    "contextMenus",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.notion.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "options_page": "options.html"
}
